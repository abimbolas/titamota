@import 'variables'

body
html
  margin 0px
  padding 0px
  background-color titamota-color-back-light
  position relative

body
input
textarea
button
select
option
  font-family Rubik, sans-serif
  font-size 16px
  line-height 20px
  font-weight 300
  color titamota-color-text
  outline none

select
option
  font-size 14px

h1, h2, h3, h4, h5, h6
  font-weight 400
  margin 20px auto

strong
  font-weight 500

p
  margin 20px auto
  font-weight 300

h4
  font-size 16px
  line-height 24px

h2
  font-size 32px
  line-height 40px
  margin-bottom 15px

.material-icons
  font-size 18px
  line-height inherit
  &.md-14
    font-size 14px
  &.md-16
    font-size 16px
  &.md-18
    font-size 18px
  &.md-20
    font-size 20px
  &.md-24
    font-size 24px

* + .material-icons
.material-icons + *
  margin-left 5px

[valign="middle"]
  vertical-align middle

a
  cursor pointer

a[href]
  color steelblue

// Color marks
[color]
  position relative
[color]:before
  content ' '
  position absolute
  left -1em
  top 50%
  transform translateY(-50%)
  width 0.5em
  height 0.5em
  border-radius 30%
  background-color gainsboro
[color="0"]:before
  background-color lighten(titamota-color-jan, 20%)
[color="1"]:before
  background-color lighten(titamota-color-feb, 20%)
[color="2"]:before
  background-color lighten(titamota-color-mar, 20%)
[color="3"]:before
  background-color lighten(titamota-color-apr, 20%)
[color="4"]:before
  background-color lighten(titamota-color-may, 20%)
[color="5"]:before
  background-color lighten(titamota-color-jun, 20%)
[color="6"]:before
  background-color lighten(titamota-color-jul, 20%)
[color="7"]:before
  background-color lighten(titamota-color-aug, 20%)
[color="8"]:before
  background-color lighten(titamota-color-sep, 20%)
[color="9"]:before
  background-color lighten(titamota-color-oct, 20%)
[color="10"]:before
  background-color lighten(titamota-color-nov, 20%)
[color="11"]:before
  background-color lighten(titamota-color-dec, 20%)

button
.button
  border 0px
  background-color titamota-color-back-gray
  border-radius 5px
  line-height 20px
  font-size 18px
  font-weight 300
  padding 10px 40px
  cursor pointer
  border-bottom solid titamota-color-border 3px
  outline none
  &:active
    border-top solid darken(titamota-color-border, 3%) 3px
    border-bottom-width 0px
    background-color darken(titamota-color-back-gray, 3%)

  &.hero
    background-color titamota-color-red
    color titamota-color-text-invert-highlight
    border-color titamota-color-red-dark

  &.primary
    background-color titamota-color-text
    color titamota-color-text-invert-highlight
    border-color black

.icon-button
  display inline-flex
  align-items center
  i.material-icons
    font-size inherit
    line-height inherit
    display block
  &.lg
    font-size 24px
    width 24px
    height 24px
    line-height 24px
    text-align center
  input[type="checkbox"]
    cursor pointer
    height 1em
    width 1em
    margin: 0
    display block

article
  font-size 18px
  max-width 40em
  // margin-left auto
  // margin-right auto

.switch-menu-wrapper
  display flex
  flex-direction column
  align-items center
  border-bottom solid 1px titamota-color-line
  .switch-menu
    line-height 24px
    display inline-flex
    margin-bottom 10px
    text-align right
    a + a
      margin-left 5px
    a
      padding 0 3px
      cursor pointer
      font-size 13px;
      display inline-block
      position relative
      &:after
        position absolute
        left 0
        bottom -2px
        height 3px
        display block
        width 100%
        background-color #dcdcdc
      &:hover:after
        content ' '
      &.active:after
        content ' '
        background-color titamota-color-text
  @media (min-width 768px)
    flex-direction row
    .switch-menu
      margin-bottom 0

/* Forms */

label
  cursor pointer
  // display flex
  // align-items flex-start

.custom-checkbox
  display inline-block
  vertical-align top
  font-size 18px
  position relative
  input
    display block
    cursor pointer
    opacity 0
    position absolute
    left 0px
    top 0px
    right 0px
    bottom 0px
    padding 0
    margin 0
    width 100%
    height 100%
    font-size 1em
    z-index 2
  .material-icons
    display block
    font-size 18px
    margin 0
    z-index 1
    position relative
  input:not(:checked) ~ .material-icons.on
    display none
  input:not(:checked) ~ .material-icons.off
    display block
  input:checked ~ .material-icons.on
    display block
  input:checked ~ .material-icons.off
    display none
  & + span
    margin-left 0.5em
    vertical-align top
    display inline-block
    position relative
    top 1px
